 <?xml version="1.0" encoding="utf-8" ?>
<logging publisher-port="8523" self-host-port="8520" self-host="true">
  <nohros xmlns="http://nohros.com/schemas/nohros.xsd">
    <providers>
      <!-- Other providers -->
      <provider
        name ="LoggingProvider"
        type="Nohros.Logging.log4net.LegacyLogger, nohros.logging.log4net">
      </provider>

      <provider
        name="LogMessageRepository"
        type="Nohros.Ruby.Logging.MongoDataProvider, nohros.ruby.logging">
        <options
          connection-string="mongodb://REMOVED"
          database-name="ruby"/>
      </provider>
    </providers>

    <xml-elements>
      <log4net>
        <appender name="Console" type="log4net.Appender.ConsoleAppender">
          <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date %-5level/%thread] %message%newline"/>
          </layout>
        </appender>

        <root>
          <level value="INFO"/>
          <appender-ref ref="Console"/>
        </root>
      </log4net>
    </xml-elements>
  </nohros>
</logging>

<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false" threshold="ALL">
  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="White"/>
      <backColor value="Red, HighIntensity"/>
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date %-5level/%thread] %line %message%newline %exception"/>
    </layout>
  </appender>

  <appender name="DebugFileAppender" type="log4net.Appender.FileAppender">
    <file value="titaniums.log"/>
    <appendToFile value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date %-5level/%thread] %line %message%newline %exception"/>
    </layout>
  </appender>

  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file value="rubynet.log"/>
    <appendToFile value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date %-5level/%thread] %message%newline exception"/>
    </layout>
  </appender>

  <root>
    <level value="ALL"/>
  </root>

  <logger name="ConsoleLogger">
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>

  <logger name="DebugFileLogger">
    <level value="DEBUG" />
    <appender-ref ref="DebugFileAppender" />
  </logger>

  <logger name="FileLogger">
    <level value="INFO" />
    <appender-ref ref="FileAppender" />
  </logger>
</log4net>